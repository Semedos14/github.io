// Final version with all buttons working, per-item time, long press, renaming popup with Cancel, and full visibility in mobile

import React, { useState } from 'react';
import {
  View,
  Text,
  TextInput,
  TouchableOpacity,
  FlatList,
  Modal,
  StyleSheet,
  ScrollView,
  Appearance,
  Linking,
  KeyboardAvoidingView,
  Platform
} from 'react-native';

export default function App() {
  const [spots, setSpots] = useState({
    'Day 1': [],
    'Day 2': [],
    'Day 3': [],
    'Day 4': [],
    'Day 5': []
  });
  const [selectedDay, setSelectedDay] = useState('Day 1');
  const [newSpot, setNewSpot] = useState('');
  const [selectedType, setSelectedType] = useState(null);
  const [renameIndex, setRenameIndex] = useState(null);
  const [renameText, setRenameText] = useState('');
  const [renameDay, setRenameDay] = useState(null);
  const [spotOptionsVisible, setSpotOptionsVisible] = useState(null);
  const [addDayModalVisible, setAddDayModalVisible] = useState(false);
  const [newDayName, setNewDayName] = useState('');
  const [darkMode, setDarkMode] = useState(false);
  const [showTimeInputIndex, setShowTimeInputIndex] = useState(null);
  const [timeInputs, setTimeInputs] = useState({});
  const [renameModalVisible, setRenameModalVisible] = useState(false);

  const toggleDarkMode = () => setDarkMode(!darkMode);

  const addSpot = () => {
    if (newSpot.trim() !== '' && selectedType) {
      const updatedSpots = [...spots[selectedDay], { name: newSpot, type: selectedType }];
      setSpots({ ...spots, [selectedDay]: updatedSpots });
      setNewSpot('');
      setSelectedType(null);
    }
  };

  const deleteSpot = (index) => {
    const updated = [...spots[selectedDay]];
    updated.splice(index, 1);
    setSpots({ ...spots, [selectedDay]: updated });
    setSpotOptionsVisible(null);
  };

  const renameSpot = () => {
    if (renameIndex !== null && renameText.trim() !== '') {
      const updated = [...spots[selectedDay]];
      updated[renameIndex].name = renameText;
      setSpots({ ...spots, [selectedDay]: updated });
      setRenameIndex(null);
      setRenameText('');
      setRenameModalVisible(false);
    }
  };

  const renameDayFn = () => {
    if (renameDay && renameText.trim() !== '') {
      const newSpots = { ...spots };
      newSpots[renameText] = newSpots[renameDay];
      delete newSpots[renameDay];
      setSpots(newSpots);
      setSelectedDay(renameText);
      setRenameDay(null);
      setRenameText('');
    }
  };

  const openGoogleMaps = (place) => {
    const query = encodeURIComponent(place);
    Linking.openURL(`https://www.google.com/maps/search/?api=1&query=${query}`);
  };

  const saveTime = (index) => {
    setShowTimeInputIndex(null);
  };

  const renderSpot = ({ item, index }) => (
    <View>
      <TouchableOpacity
        style={[styles.spotItem, {
          backgroundColor:
            item.type === 'beach' ? '#d0f0ff' : item.type === 'food' ? '#ffe4b5' : item.type === 'walk' ? '#e6ffe6' : '#eee'
        }]}
        onLongPress={() => setSpotOptionsVisible(index)}
      >
        <View style={{ flexDirection: 'row', justifyContent: 'space-between', alignItems: 'center' }}>
          <View style={{ flexDirection: 'row', alignItems: 'center' }}>
            <Text style={{ fontSize: 20, marginRight: 8 }}>
              {item.type === 'beach' ? 'ğŸ–ï¸' : item.type === 'food' ? 'ğŸ½ï¸' : 'ğŸš¶'}
            </Text>
            <Text style={styles.spotText}>{item.name}</Text>
          </View>
          <View style={{ flexDirection: 'row', alignItems: 'center' }}>
            <TouchableOpacity onPress={() => openGoogleMaps(item.name)}>
              <Text style={{ fontSize: 18, marginRight: 8 }}>ğŸ“</Text>
            </TouchableOpacity>
            <TouchableOpacity onPress={() => setShowTimeInputIndex(index)}>
              <Text style={{ fontSize: 16, color: '#666' }}>ğŸ•’</Text>
            </TouchableOpacity>
          </View>
        </View>
      </TouchableOpacity>

      {showTimeInputIndex === index && (
        <View style={{ marginTop: 4, paddingHorizontal: 8 }}>
          <TextInput
            placeholder="Î‘Ï€ÏŒ ÏÏÎ±"
            value={timeInputs[index]?.start || ''}
            onChangeText={(text) => setTimeInputs({ ...timeInputs, [index]: { ...timeInputs[index], start: text } })}
            style={styles.input}
          />
          <TextInput
            placeholder="ÎˆÏ‰Ï‚ ÏÏÎ±"
            value={timeInputs[index]?.end || ''}
            onChangeText={(text) => setTimeInputs({ ...timeInputs, [index]: { ...timeInputs[index], end: text } })}
            style={styles.input}
          />
          <TouchableOpacity onPress={() => saveTime(index)}>
            <Text style={{ color: 'blue', textAlign: 'right', marginTop: 4 }}>OK</Text>
          </TouchableOpacity>
        </View>
      )}

      {spotOptionsVisible === index && (
        <View style={{ marginVertical: 8 }}>
          <TouchableOpacity onPress={() => deleteSpot(index)} style={{ marginVertical: 8 }}>
            <Text style={{ color: 'red', textAlign: 'center' }}>Î”Î¹Î±Î³ÏÎ±Ï†Î®</Text>
          </TouchableOpacity>
          <TouchableOpacity onPress={() => {
            setRenameIndex(index);
            setRenameText(item.name);
            setRenameModalVisible(true);
          }} style={{ marginVertical: 8 }}>
            <Text style={{ color: 'blue', textAlign: 'center' }}>ÎœÎµÏ„Î¿Î½Î¿Î¼Î±ÏƒÎ¯Î±</Text>
          </TouchableOpacity>
        </View>
      )}
    </View>
  );

  return (
    <KeyboardAvoidingView style={[styles.container, darkMode && { backgroundColor: '#111' }]} behavior={Platform.OS === 'ios' ? 'padding' : undefined}>
      <View style={{ flexDirection: 'row', justifyContent: 'space-between', alignItems: 'center' }}>
        <Text style={[styles.title, darkMode && { color: '#fff' }]}>You Have Not Been To Samos!</Text>
        <TouchableOpacity onPress={toggleDarkMode}>
          <Text style={{ fontSize: 18 }}>{darkMode ? 'â˜€ï¸' : 'ğŸŒ™'}</Text>
        </TouchableOpacity>
      </View>

      <ScrollView horizontal style={{ marginBottom: 4 }}>
        {Object.keys(spots).map((day) => (
          <TouchableOpacity
            key={day}
            style={[styles.dayBtn, selectedDay === day && styles.selectedDay]}
            onPress={() => setSelectedDay(day)}
            onLongPress={() => {
              setRenameText(day);
              setRenameDay(day);
            }}
          >
            <Text style={styles.dayText}>{day}</Text>
          </TouchableOpacity>
        ))}
        <TouchableOpacity onPress={() => setAddDayModalVisible(true)} style={[styles.dayBtn, { backgroundColor: '#666' }]}>
          <Text style={styles.dayText}>+ Î—Î¼Î­ÏÎ±</Text>
        </TouchableOpacity>
      </ScrollView>

      <FlatList
        data={spots[selectedDay]}
        keyExtractor={(item, index) => index.toString()}
        renderItem={renderSpot}
        contentContainerStyle={{ paddingBottom: 20, paddingTop: 8 }}
        inverted={false}
      />

      <View style={[styles.addContainer, { marginBottom: 16 }]}>
              <View style={styles.iconRow}>
          {['beach', 'food', 'walk'].map((type) => (
            <TouchableOpacity
              key={type}
              onPress={() => setSelectedType(type)}
              style={[
                styles.iconButton,
                selectedType === type && styles.selectedIcon
              ]}
            >
              <Text style={{ fontSize: 24 }}>
                {type === 'beach' ? 'ğŸ–ï¸' : type === 'food' ? 'ğŸ½ï¸' : 'ğŸš¶'}
              </Text>
            </TouchableOpacity>
          ))}
        </View>

        <TextInput
          placeholder="ÎŒÎ½Î¿Î¼Î± Î´ÏÎ±ÏƒÏ„Î·ÏÎ¹ÏŒÏ„Î·Ï„Î±Ï‚"
          value={newSpot}
          onChangeText={setNewSpot}
          style={styles.input}
          placeholderTextColor="#888"
        />
        <TouchableOpacity onPress={addSpot} style={styles.addButton}>
          <Text style={{ color: '#fff', fontWeight: 'bold' }}>Î ÏÎ¿ÏƒÎ¸Î®ÎºÎ·</Text>
        </TouchableOpacity>
      </View>

      {/* Rename Modal */}
      <Modal visible={renameModalVisible} transparent animationType="fade">
        <View style={styles.modalOverlay}>
          <View style={styles.modalContent}>
            <TextInput
              value={renameText}
              onChangeText={setRenameText}
              style={[styles.input, { height: 40, color: '#000' }]}
              placeholder="ÎÎ­Î¿ ÏŒÎ½Î¿Î¼Î±"
              placeholderTextColor="#888"
            />
            <View style={{ flexDirection: 'row', justifyContent: 'space-between', marginTop: 10 }}>
              <TouchableOpacity onPress={() => setRenameModalVisible(false)}>
                <Text style={{ color: 'gray' }}>Î‘ÎºÏÏÏ‰ÏƒÎ·</Text>
              </TouchableOpacity>
              <TouchableOpacity onPress={renameSpot}>
                <Text style={{ color: 'blue' }}>OK</Text>
              </TouchableOpacity>
            </View>
          </View>
        </View>
      </Modal>

      {/* Add Day Modal */}
      <Modal visible={addDayModalVisible} transparent animationType="fade">
        <View style={styles.modalOverlay}>
          <View style={styles.modalContent}>
            <TextInput
              placeholder="ÎŒÎ½Î¿Î¼Î± Î·Î¼Î­ÏÎ±Ï‚"
              value={newDayName}
              onChangeText={setNewDayName}
              style={[styles.input, { height: 40, color: '#000' }]}
              placeholderTextColor="#888"
            />
            <View style={{ flexDirection: 'row', justifyContent: 'space-between', marginTop: 10 }}>
              <TouchableOpacity onPress={() => setAddDayModalVisible(false)}>
                <Text style={{ color: 'gray' }}>Î‘ÎºÏÏÏ‰ÏƒÎ·</Text>
              </TouchableOpacity>
              <TouchableOpacity onPress={() => {
                if (newDayName.trim()) {
                  setSpots({ ...spots, [newDayName]: [] });
                  setSelectedDay(newDayName);
                  setNewDayName('');
                  setAddDayModalVisible(false);
                }
              }}>
                <Text style={{ color: 'blue' }}>OK</Text>
              </TouchableOpacity>
            </View>
          </View>
        </View>
      </Modal>
    </KeyboardAvoidingView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    paddingTop: 40,
    paddingHorizontal: 16
  },
  title: {
    fontSize: 24,
    fontWeight: 'bold'
  },
  dayBtn: {
    backgroundColor: '#ccc',
    paddingVertical: 6,
    paddingHorizontal: 12,
    borderRadius: 12,
    marginHorizontal: 4
  },
  selectedDay: {
    backgroundColor: '#00aced'
  },
  dayText: {
    fontSize: 16
  },
  spotItem: {
    padding: 12,
    borderRadius: 12,
    marginBottom: 8
  },
  spotText: {
    fontSize: 16
  },
  addContainer: {
    marginTop: 8,
    padding: 12,
    borderTopWidth: 1,
    borderColor: '#ddd',
    paddingBottom: 20
  },
  iconRow: {
    flexDirection: 'row',
    justifyContent: 'space-around',
    marginBottom: 8
  },
  iconButton: {
    padding: 10,
    borderRadius: 8,
    backgroundColor: '#eee'
  },
  selectedIcon: {
    backgroundColor: '#a0e1ff'
  },
  input: {
    borderWidth: 1,
    borderColor: '#aaa',
    borderRadius: 8,
    padding: 8,
    marginBottom: 8,
    color: '#000'
  },
  addButton: {
    backgroundColor: '#007AFF',
    paddingVertical: 10,
    borderRadius: 8,
    alignItems: 'center'
  },
  modalOverlay: {
    flex: 1,
    backgroundColor: '#00000099',
    justifyContent: 'center',
    alignItems: 'center'
  },
  modalContent: {
    backgroundColor: '#fff',
    padding: 16,
    borderRadius: 12,
    width: '80%'
  }
});

